<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_after_sp"
    android:gravity="center"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="293.33dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="58.67dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/playground_cover" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="293.33dp"
        android:layout_height="61.33dp"
        android:layout_gravity="center"
        android:layout_marginBottom="22.67dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/login_btn_After_sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/loginColorbtn"
            android:onClick="loginSPBtn"
            android:paddingBottom="7dp"
            android:text="Login"
            android:textColor="#008542"
            android:textDirection="ltr"
            android:textSize="26dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="293.33dp"
        android:layout_height="61.33dp"
        android:layout_gravity="center"
        android:layout_marginBottom="22.67dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/registeration_btn_After_sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/registrationColorbtn"
            android:onClick="registerSPBtn"
            android:paddingBottom="7dp"
            android:text="Registration"
            android:textColor="#ffffff"
            android:textDirection="ltr"
            android:textSize="26dp" />
    </LinearLayout>

</LinearLayout>