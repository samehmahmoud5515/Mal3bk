<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/formationchildstyle"
    android:gravity="center"
    android:id="@+id/popUpPlayerLayout"
    android:layoutDirection="rtl"
    android:padding="8dp"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/radioGroup_getPlayer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/add_player_to_team_get_player_popup_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center"
            android:text="اضافه الي الفريق"
            android:textColor="#2b2b2b"
            android:textSize="22sp" />


        <RadioButton
            android:id="@+id/borrow_get_player_popup_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="right|center"
            android:text="استعارته في مباراه"
            android:textColor="#2b2b2b"
            android:textSize="22sp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@drawable/get_player_style_btn"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_execute_get_player_popup_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/get_player_style_btn"
            android:text="تنفيذ"
            android:gravity="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="24sp" />
    </LinearLayout>


</LinearLayout>
