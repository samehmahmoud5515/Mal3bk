<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:background="#ebf8f1"
        android:gravity="center_horizontal"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:gravity="center"

            android:layoutDirection="rtl">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layoutDirection="rtl"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/edit_data_fragment_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_profile"
                            android:text="تعديل البيانات"
                            android:textColor="#a1a1a1"
                            android:textSize="13.33dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_marginRight="10dp"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/team_btn_fragment_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_profile"
                            android:text="&#xf0c0;"
                            android:textColor="#a1a1a1"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_marginRight="10dp"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_profile"
                            android:text="&#xf073;"
                            android:textColor="#a1a1a1"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:gravity="center"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/statisitics_icon_fragment_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="&#xf104;"
                            android:textColor="#bfbfbf"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="7dp"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/statisitics_fragment_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="احصائيات"
                            android:textColor="#bfbfbf"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="13dp"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layoutDirection="rtl"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layoutDirection="rtl"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/matches_win_icon_fragment_profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="&#xf0a8;"
                                    android:textColor="#bfbfbf"
                                    android:textSize="13.33dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="55dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="7dp"
                                android:layoutDirection="rtl"
                                android:orientation="horizontal"
                                android:paddingBottom="8dp">

                                <TextView
                                    android:id="@+id/matches_win_header_fragment_profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="السرعه "
                                    android:textColor="#bfbfbf"
                                    android:textSize="18dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="254dp"
                            android:layout_height="12dp"
                            android:layout_marginRight="40dp"
                            android:gravity="center"
                            android:layoutDirection="rtl"
                            android:orientation="horizontal">

                            <ProgressBar
                                android:id="@+id/matches_win_progressBar_fragment_profile"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"

                                android:indeterminate="false"
                                android:progress="30"
                                android:progressDrawable="@drawable/progressbarstyleone" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:gravity="center"
                            android:layoutDirection="rtl"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/matches_win_value_fragment_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="50%"
                                android:textColor="#008542"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layoutDirection="rtl"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layoutDirection="rtl"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/matcches_tie_icon_fragment_profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="&#xf0a8;"
                                    android:textColor="#bfbfbf"
                                    android:textSize="13.33dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="55dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="7dp"
                                android:gravity="center"
                                android:layoutDirection="rtl"
                                android:orientation="horizontal"
                                android:paddingBottom="8dp">

                                <TextView
                                    android:id="@+id/matches_tie_header_fragment_profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="المهاره"
                                    android:textColor="#bfbfbf"
                                    android:textSize="18dp" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="254dp"
                            android:layout_height="12dp"
                            android:layout_marginRight="40dp"
                            android:gravity="center"
                            android:layoutDirection="rtl"
                            android:orientation="horizontal">

                            <ProgressBar
                                android:id="@+id/matches_tie_progressBar_fragment_profile"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:progress="50"
                                android:progressDrawable="@drawable/progressbarstyleone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layoutDirection="rtl"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/matches_tie_value_fragment_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="50%"
                                android:textColor="#008542"
                                android:textSize="14dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layoutDirection="rtl"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layoutDirection="rtl"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/matches_lost_icon_fragment_profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="&#xf0a8;"
                                    android:textColor="#bfbfbf"
                                    android:textSize="13.33dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="55dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="7dp"
                                android:layoutDirection="rtl"
                                android:orientation="horizontal"
                                android:paddingBottom="8dp">

                                <TextView
                                    android:id="@+id/matches_lost_header_fragment_profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="التسديد"
                                    android:textColor="#bfbfbf"
                                    android:textSize="18dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="254dp"
                            android:layout_height="12dp"
                            android:layout_marginRight="40dp"
                            android:gravity="center"
                            android:layoutDirection="rtl"
                            android:orientation="horizontal">

                            <ProgressBar
                                android:id="@+id/matches_lostprogressBar_fragment_profile"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:progress="20"
                                android:progressDrawable="@drawable/progressbarstyleone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layoutDirection="rtl"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/matches_lost_value_fragment_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="60%"
                                android:textColor="#008542"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:gravity="center"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/members_icon_fragment_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="&#xf104;"
                            android:textColor="#bfbfbf"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="7dp"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/members_icon_header_fragment_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="اعضاء الفريق"
                            android:textColor="#bfbfbf"
                            android:textSize="18dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="398.67dp"
                    android:layout_height="94dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="33dp"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <android.support.v7.widget.RecyclerView

                        android:id="@+id/membersRecyclerView"

                        android:layout_width="398.67dp"

                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="398.67dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/get_player_style_btn"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_submit_fragment_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/get_player_style_btn"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:text="طلب الانضمام الي فريق"
                        android:textSize="24dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivAction"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:focusable="true" />
</RelativeLayout>
