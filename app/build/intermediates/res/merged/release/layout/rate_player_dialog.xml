<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/formationchildstyle"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="16dp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="السرعة"
    android:id="@+id/speed_tv"
    />
    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srb_starSize="40dp"
        app:srb_numberOfStars="5"
        app:srb_rating="0"
        app:srb_stepSize="0.5"
        app:srb_borderColor="#008542"
        app:srb_fillColor="#008542"
        android:id="@+id/speed_rating"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="المهارة"
        android:id="@+id/skill_tv"
        />
    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srb_starSize="40dp"
        app:srb_numberOfStars="5"
        app:srb_rating="0"
        app:srb_stepSize="0.5"
        app:srb_borderColor="#008542"
        app:srb_fillColor="#008542"
        android:id="@+id/skill_rating"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="التسديد"
        android:id="@+id/shooting_tv"
        />
    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srb_starSize="40dp"
        app:srb_numberOfStars="5"
        app:srb_rating="0"
        app:srb_stepSize="0.5"
        app:srb_borderColor="#008542"
        app:srb_fillColor="#008542"
        android:id="@+id/shooting_rating"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/saveRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/get_player_style_btn"
            android:gravity="center"
            android:text="حفظ"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_close_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/get_player_style_btn"
            android:gravity="center"
            android:text="إغلاق"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="24sp" />

    </LinearLayout>


</LinearLayout>
