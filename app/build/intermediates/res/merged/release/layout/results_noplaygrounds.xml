<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    android:orientation="vertical">
    <TextView
        android:id="@+id/icon1_result_playground_content_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"
        android:text="&#xf041;"
        android:textColor="#008542"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/playgroundName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="ملعب النور"
        android:textColor="#008542"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/icon1_result_playground_content_list"
        android:layout_alignBottom="@+id/icon1_result_playground_content_list"
        android:layout_toStartOf="@+id/icon1_result_playground_content_list"
        android:layout_marginEnd="17dp" />

    <TextView
        android:id="@+id/playground_city_tv"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:textColor="#000"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/icon1_result_playground_content_list"
        android:layout_marginRight="45dp"
        />

    <TextView
        android:id="@+id/playground_address_tv"
        android:layout_width="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="3dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/playground_city_tv"
        android:layout_height="wrap_content"
        android:text="أبحر الشماليه-بجوار ابحر الشماليه"
        android:textColor="#6c6d6c"
        android:textSize="13.33dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playground_address_tv"
        android:id="@+id/ic_type"
        android:text="&#xf163;"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:textColor="#008542"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playground_type_tv"
        android:textColor="#000"
        android:textSize="20sp"

        android:layout_alignBaseline="@+id/ic_type"
        android:layout_alignBottom="@+id/ic_type"
        android:layout_toStartOf="@+id/playground_city_tv"
        android:layout_alignEnd="@+id/date_time_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ic_clock"
        android:layout_below="@+id/ic_type"

        android:text="&#xf017;"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:textColor="#008542"
        android:textSize="20sp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_time_tv"
        android:textSize="20sp"

        android:textColor="#000"
        android:layout_alignBaseline="@+id/ic_clock"
        android:layout_alignBottom="@+id/ic_clock"
        android:layout_alignEnd="@+id/playgroundName_tv" />

    <Button
        android:id="@+id/btn_add_result_playground_content_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#008542"
        android:paddingBottom="6dp"
        android:text="احجز ملعب"
        android:padding="7dp"
        android:textAlignment="viewStart"
        android:textSize="22sp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="48dp"
        android:layout_below="@+id/ic_clock"
        android:layout_toStartOf="@+id/playgroundName_tv" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/btn_add_result_playground_content_list"
        android:background="#c0c0c0"/>

    <ImageView
        android:id="@+id/playgroundimage_imageview"
        android:layout_width="128dp"
        android:layout_height="122dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_above="@+id/btn_add_result_playground_content_list"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />

</RelativeLayout>
