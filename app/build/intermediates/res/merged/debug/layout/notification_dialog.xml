<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="300dp"
android:layout_height="wrap_content"
android:background="@drawable/formationchildstyle"
android:gravity="center"
android:layoutDirection="rtl"
android:orientation="vertical"
android:padding="8dp">

<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:id="@+id/_notificationDetails_imageView"
    android:layout_marginBottom="5dp"
    />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="لا توجد ملاعب بهذه الخصائص"
    android:textSize="20sp"
    android:id="@+id/notification_details_tv"
    android:textAlignment="center"
    style="@style/notification_item_style"
    android:layout_marginBottom="10dp"
    android:textStyle="bold" />

<Button
    android:id="@+id/confirm_btn"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/get_player_style_btn"
    android:gravity="center"
    android:text="إذهب الي الضبط"
    android:textAllCaps="false"
    android:textColor="#FFF"
    android:textSize="24sp" />

<Button
    android:id="@+id/cancel_btn"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/get_player_style_btn"
    android:gravity="center"
    android:text="إغلاق"
    android:textAllCaps="false"
    android:textColor="#FFF"
    android:textSize="24sp" />


</LinearLayout>
