<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/linearlayoutmain_fragment_bg"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:id="@+id/mainLayout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_playground_main_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/playground_name_main_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="#008542"
            android:textStyle="bold"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/calender_ic"
            style="@style/tv_mainFragment"
            android:textColor="#008542"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="&#xf073;" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/tv_mainFragment"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text=" من : " />

        <TextView
            android:id="@+id/tv_date_start_value"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            style="@style/tv_mainFragment" />

        <TextView
            android:id="@+id/to_tv"
            style="@style/tv_mainFragment"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text=" إلي : " />

        <TextView
            android:id="@+id/tv_date_end_value"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            style="@style/tv_mainFragment" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/moneyIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#xf0d6;"
            android:textColor="#008542"
            android:textSize="18sp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/price_tv"
            style="@style/tv_mainFragment"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="السعر للساعة:" />

        <TextView
            android:id="@+id/price_value_tv"
            style="@style/tv_mainFragment"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/town_icon_main_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="&#xf041;"
                android:textColor="#008542"
                android:textSize="18sp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/town_playground_main_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="المدينه : القاهره"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textColor="#008542"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/layout_mainpage_button"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_main_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_mainpage_button"
            android:text="احجز الان"
            android:textAllCaps="false"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>
