<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/resultLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f9f5"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">





                <TextView
                    android:id="@+id/prompt_name_result_playground_content_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="ملعب النور"
                    android:textColor="#008542"
                    android:textSize="20sp" />


            <TextView
                android:id="@+id/prompt_location_result_playground_content_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="أبحر الشماليه-بجوار ابحر الشماليه"
                android:textColor="#6c6d6c"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textSize="20sp" />





                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/date_time_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="ملعب النور"
                    android:textColor="#008542"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:textSize="20sp" />


        </LinearLayout>


        <ImageView
            android:id="@+id/playgroundimage_imageview"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1" />


    </LinearLayout>



    <Button
        android:id="@+id/btn_add_result_playground_content_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/layout_registerground_addcartbtn_bg"
        android:text="احجز ملعب"
        android:textAllCaps="false"
        android:textSize="20sp" />

</LinearLayout>
