
<android.support.v4.widget.SwipeRefreshLayout  xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layoutDirection="rtl"
android:orientation="vertical"
android:background="#ecf7f1"
android:id="@+id/swipe_refresh_players"
    android:padding="4dp"

tools:context="com.logicdesigns.mohammed.mal3bklast.fragments.RequestsToPlayersFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#ecf7f1"

        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="لاعبيين تم ارسال طلب انضمام الي فريقك لهم"
        android:textAlignment="center"
        android:id="@+id/title_buy"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"

        />

<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/playerRequest_recycler_view_buy"
    android:background="#ecf7f1"
    />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="لاعبيين تم ارسال طلب استعارة في مباراة لفريقك لهم"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20sp"
            android:id="@+id/title_borrow"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/playerRequest_recycler_view_borrow"
            android:background="#ecf7f1"

            />


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>
