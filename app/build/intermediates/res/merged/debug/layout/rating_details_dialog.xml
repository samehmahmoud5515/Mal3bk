<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/formationchildstyle"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:id="@+id/ratingDailog_linearLayout"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/speed_tv_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="السرعة"
            android:textColor="#008542"
            android:layout_weight="0.4"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.7"

            android:layout_marginRight="5dp">

            <RatingBar
                android:id="@+id/speed_rb"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#008542" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_width="180dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/skill_tv_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المهارة"
            android:layout_weight="0.4"

            android:textColor="#008542"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.7"
            android:layout_marginTop="7dp"

            android:layout_marginRight="5dp">

            <RatingBar
                android:id="@+id/skill_rb"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#008542" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shooting_tv_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="التسديد"
            android:layout_weight="0.3"

            android:textColor="#008542"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.7"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp">

            <RatingBar
                android:id="@+id/shooting_rb"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#008542" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/ratePlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/get_player_style_btn"
            android:gravity="center"
            android:text="تقيم"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="24sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_close_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/get_player_style_btn"
            android:gravity="center"
            android:text="إغلاق"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="24sp" />

    </LinearLayout>

</LinearLayout>
