<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/childLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/formationchildstyle"
        android:gravity="center">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:gravity="right">

            <ImageView
                android:id="@+id/formation_palyer_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/formation_player_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="رمضان صبحي"
                android:textColor="#404e41"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="0.35"
            android:layout_height="wrap_content">

            <RatingBar
                android:id="@+id/formation_ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:numStars="5"
                android:max="100"
                android:rating="0.0"
                android:stepSize="0.0"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5">

            <TextView
                android:id="@+id/formation_text_rating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4.5"
                android:gravity="center"
                android:textColor="#b2bab6"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>