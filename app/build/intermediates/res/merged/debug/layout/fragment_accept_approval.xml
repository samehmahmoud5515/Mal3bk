<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f9f5"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37.33dp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/true_icon_fragment_accept_approval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#xf058;"
                    android:textColor="#008542"
                    android:textSize="50dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/prompt1_fragment_accept_approval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="تم اكتمال عملية الدفع"
                    android:textColor="#3b4641"
                    android:textSize="28dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17.33dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/prompt2_fragment_accept_approval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تم تنفيذ دفعتك بنجاح"
                android:textColor="#008542"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17.33dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/go_get_player_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#008542"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:text="استقطاب لاعب"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
