<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RatingBar android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ratingBar_dialog"
    android:layout_marginBottom="10dp"
    android:progressTint="#008542"
    android:layout_centerHorizontal="true"
    android:backgroundTint="#008542"
    android:maxWidth="20dp"
    android:minWidth="20dp"
    android:numStars="5"
    android:isIndicator="true"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar_dialog"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text="الكل"
        android:id="@+id/allText"
        android:textColor="#008542"
        android:textSize="22sp"
        />
</RelativeLayout>