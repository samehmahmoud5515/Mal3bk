<resources xmlns:fab="http://schemas.android.com/apk/res-auto"
    >

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#2E8B57</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#008542</item>

    </style>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:background">@drawable/formationchildstyle</item>

        <!--<item name="android:background">#FFF</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="textColorAlertDialogListItem">#000</item>
        <item name="android:textColor">#000</item>
        <item name="android:colorFocusedHighlight">#008542</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#2E8B57</item>
        <item name="colorControlActivated">#2E8B57</item>
    </style>


    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorAlertDialogListItem">#000</item>
    </style>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#000</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="android:background">#ebf8f1</item>

    </style>

    <style name="sectionHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button_reserv">
        <item name="android:textAlignment">center</item>
        <item name="android:background">#FFF</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="buttone_filer" parent="button_reserv">

        <item name="android:text">@string/choose</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="tv_mainFragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#2b2b2b</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RatingBarStyle" parent="Theme.AppCompat">
        <item name="colorControlNormal">#ebf8f1</item>
        <item name="colorControlActivated">#2E8B57</item>
    </style>

    <style name="notification_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#2E8B57</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>


    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
        <item name="android:background">@drawable/formationchildstyle</item>

        <!--<item name="android:background">#FFF</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="textColorAlertDialogListItem">#000</item>
        <item name="android:textColor">#000</item>
        <item name="android:colorFocusedHighlight">#008542</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/translate_left_side</item>
        <item name="android:windowExitAnimation">@anim/translate_right_side</item>
    </style>

    <style name="PlayerComingMatchesStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#2E8B57</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>


    <style name="RequestsToPlayer">
        <item name="android:textColor">#2E8B57</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="alertText">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">22dp</item>
    </style>

<style name="fabMenuStyle_en">
   <item name="android:layout_gravity">bottom|end</item>
</style>

</resources>