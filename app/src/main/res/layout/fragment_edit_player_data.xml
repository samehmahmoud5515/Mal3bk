<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebf8f1"
    android:padding="16dp"
    android:layoutDirection="rtl"
    android:id="@+id/modifyLayout"
    tools:context=".EditPlayerDataFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ic_name_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center|right"
                android:text="&#xf2bd;"
                android:textColor="#20945a"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/username_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="الاسم"
                android:textColor="#20945a"
                android:textSize="17sp" />


            <EditText
                android:id="@+id/username_editText"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:backgroundTint="#20945a"
                android:popupBackground="#b2bab6"
                android:textColor="#000"
                android:gravity="center|right"
                android:textSize="17sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ic_email_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center|right"
                android:text="&#xf0e0;"
                android:textColor="#20945a"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/email_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="البريد الإلكتروني"
                android:textColor="#20945a"
                android:textSize="17sp" />


            <EditText
                android:id="@+id/email_editText"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:backgroundTint="#20945a"
                android:inputType="textMultiLine"
                android:gravity="center|right"
                android:textColor="#000"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ic_mobile_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center|right"
                android:text="&#xf10b;"
                android:textColor="#20945a"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/mobile_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="رقم الجوال"
                android:textColor="#20945a"
                android:textSize="17sp" />


            <EditText
                android:id="@+id/mobile_editText"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:backgroundTint="#20945a"
                android:gravity="center|right"
                android:inputType="number"
                android:popupBackground="#b2bab6"
                android:textColor="#000"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ic_password_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center|right"
                android:text="&#xf023;"
                android:textColor="#20945a"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/password_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="الرقم السري"
                android:textColor="#20945a"
                android:textSize="17sp" />


            <EditText
                android:id="@+id/password_editText"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:backgroundTint="#20945a"
                android:gravity="center|right"
                android:popupBackground="#b2bab6"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textSize="17sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ic_address_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center|right"
                android:text="&#xf124;"
                android:textColor="#20945a"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/address_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="العنوان"
                android:textColor="#20945a"
                android:textSize="17sp" />


            <EditText
                android:id="@+id/address_editText"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:backgroundTint="#20945a"
                android:gravity="center|right"
                android:popupBackground="#b2bab6"
                android:textColor="#000"
                android:textSize="17sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ic_city"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center|right"
                android:text="&#xf124;"
                android:textColor="#20945a"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/city_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="المدينة"
                android:textColor="#20945a"
                android:textSize="17sp" />

            <Button
                android:id="@+id/select_city_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:background="@drawable/rounded_with_effect"
                android:gravity="center"
                android:text="اختار"

                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ic_rol_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center|right"
                android:text="&#xf263;"
                android:textColor="#20945a"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/rorl_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="مركز اللعب"
                android:textColor="#20945a"
                android:textSize="17sp" />

            <Button
                android:id="@+id/select_playerPostion_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:gravity="center"
                android:popupBackground="#b2bab6"
                android:text="اختار"
                android:background="@drawable/rounded_with_effect"

                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ic_rol_tv__"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center|right"
                android:text="&#xf263;"
                android:textColor="#20945a"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/rorl_textview__"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="اليسري ام اليمني"
                android:textColor="#20945a"
                android:textSize="17sp" />

            <Button
                android:id="@+id/select_RorL_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:gravity="center"
                android:popupBackground="#b2bab6"
                android:background="@drawable/rounded_with_effect"

                android:text="اختار"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/birthdate_ic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center|right"
                android:text="&#xf073;"
                android:textColor="#20945a"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/birthdate_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="تاريخ الميلاد"
                android:textColor="#20945a"
                android:textSize="17sp" />

            <Button
                android:id="@+id/select_birthDate_btn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:gravity="center"
                android:popupBackground="#b2bab6"
                android:text="اختار"
                android:background="@drawable/rounded_with_effect"

                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ic_proImage_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center|right"
                android:text="&#xf1c5;"
                android:textColor="#20945a"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/proImage_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="تغير الصورة الشخصية"
                android:textColor="#20945a"
                android:textSize="17sp" />

            <Button
                android:id="@+id/select_profile_image_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:gravity="center"
                android:popupBackground="#b2bab6"
                android:text="اختار"
                android:background="@drawable/rounded_with_effect"

                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ic_change_lang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center|right"
                android:text="&#xf1ab;"
                android:textColor="#20945a"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/change_lang_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="لغة التطبيق"
                android:textColor="#20945a"
                android:textSize="17sp" />

            <Button
                android:id="@+id/select_lang_btn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:gravity="center"
                android:popupBackground="#b2bab6"
                android:text="اختار"
                android:textAllCaps="false"
                android:textColor="#000"
                android:background="@drawable/rounded_with_effect"

                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_updateData"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/get_player_style_btn"
            android:gravity="center"
            android:text="حفظ"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="24sp" />
        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/get_player_style_btn"
            android:gravity="center"
            android:text="إلغاء"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>