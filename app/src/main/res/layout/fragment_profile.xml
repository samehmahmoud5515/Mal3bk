                          android:layout_marginRight="2dp"
                          android:layout_weight="1"
                          android:gravity="center"
                          android:text="&#xf234;"
                          android:background="@drawable/button_profile"

                          android:textColor="#a1a1a1"
                          android:textSize="17sp" />
                      <Button
                          android:id="@+id/match_history_btn"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="2dp"
                          android:layout_marginRight="2dp"
                          android:layout_weight="1"
                          android:gravity="center"
                          android:text="&#xf1da;"
                          android:background="@drawable/button_profile"
                         android:visibility="gone"
                          android:textColor="#a1a1a1"
                          android:textSize="17sp" />-->



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/statisitics_icon_fragment_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:gravity="center|right"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="&#xf104;"
                    android:textColor="#bfbfbf"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/statisitics_fragment_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="احصائيات"
                    android:textColor="#bfbfbf"
                    android:textSize="17sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/matches_win_icon_fragment_profile"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="right|center"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="&#xf0a8;"
                            android:textColor="#bfbfbf"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/matches_win_header_fragment_profile"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right|center"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="السرعه "
                            android:textColor="#bfbfbf"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/player_speed_progressBar_fragment_profile"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminate="false"
                            android:max="6"
                            android:progressDrawable="@drawable/progressbarstyleone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/player_speed_value_fragment_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="0%"
                            android:textColor="#008542"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/matcches_tie_icon_fragment_profile"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="right|center"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="&#xf0a8;"
                            android:textColor="#bfbfbf"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/matches_tie_header_fragment_profile"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right|center"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="المهاره"
                            android:textColor="#bfbfbf"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/player_skill_progressBar_fragment_profile"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminate="false"
                            android:max="6"
                            android:progressDrawable="@drawable/progressbarstyleone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/player_skill_value_fragment_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="0%"
                            android:textColor="#008542"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/matches_lost_icon_fragment_profile"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="right|center"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="&#xf0a8;"
                            android:textColor="#bfbfbf"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/matches_lost_header_fragment_profile"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right|center"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="التسديد"
                            android:textColor="#bfbfbf"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/player_shooting_progressBar_fragment_profile"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminate="false"
                            android:max="6"
                            android:progressDrawable="@drawable/progressbarstyleone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/player_shooting_value_fragment_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="0%"
                            android:textColor="#008542"
                            android:textSize="17sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/members_icon_fragment_profile"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="right|center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="&#xf104;"
                        android:textColor="#bfbfbf"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/members_icon_header_fragment_profile"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="اعضاء الفريق"
                        android:textColor="#bfbfbf"
                        android:textSize="17sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="17dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/membersRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                </FrameLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_submit_fragment_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/get_player_style_btn"
                android:gravity="center"
                android:text="طلب الانضمام الي فريق"
                android:textAllCaps="false"
                android:textSize="24sp" />

        </LinearLayout>

    </ScrollView>
    <!-- <android.support.design.widget.FloatingActionButton
         android:id="@+id/fab_addTeam"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="bottom|start"
         android:layout_marginTop="@dimen/fab_margin"
         android:layout_marginEnd="@dimen/fab_margin"
         android:layout_marginStart="@dimen/fab_margin"
         app:backgroundTint="#FFF"
         android:layout_marginBottom="50dp"
        android:src="@drawable/ic_addteam" /> -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/fab_linearlayout"
        android:layout_gravity="bottom|start"

        android:layout_height="wrap_content">
        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:menu_colorNormal="#008542"
            fab:menu_colorPressed="#008542"
            fab:menu_colorRipple="#008542"
            android:layout_marginBottom="40dp"
            fab:fab_colorNormal= "#008542"

            >

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_addPlayground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/soccer_field"
                fab:fab_size="mini"
                fab:fab_colorNormal= "#FFF"
                fab:fab_colorPressed = "#008542"
                fab:fab_label="Menu item 1"

                />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_teammatches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_team"
                fab:fab_size="mini"
                fab:fab_colorNormal= "#FFF"
                fab:fab_colorPressed = "#008542"
                fab:fab_label="Menu item 1"

                />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_historymatches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/history_"
                fab:fab_size="mini"
                fab:fab_colorNormal= "#FFF"
                fab:fab_colorPressed = "#008542"
                fab:fab_label="Menu item 1"

                />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_comingmatches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/soccer_ball"
                fab:fab_size="mini"
                fab:fab_colorNormal= "#FFF"
                fab:fab_colorPressed = "#008542"
                fab:fab_label="Menu item 1"

                />
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_addTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_stadium"
                fab:fab_size="mini"
                fab:fab_colorNormal= "#FFF"
                fab:fab_colorPressed = "#008542"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                fab:fab_label="Menu item 1"

                />
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/inbox_ic"
                fab:fab_size="mini"
                fab:fab_colorNormal= "#FFF"
                fab:fab_colorPressed = "#008542"
                fab:fab_label="Menu item 1"
                />

        </com.github.clans.fab.FloatingActionMenu>
    </LinearLayout>
</FrameLayout>
