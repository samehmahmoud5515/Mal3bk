<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playersLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/formationchildstyle"
        android:layout_margin="4dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/formation_palyer_photo"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            />

        <TextView
            android:id="@+id/formation_player_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="2"
            android:text="رمضان صبحي"

            android:textColor="#404e41"
            android:gravity="center"
            android:textSize="16dp" />

<RelativeLayout
    android:layout_width="0dp"
    android:layout_weight="2"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:gravity="center"
    android:layout_height="match_parent">
        <RatingBar
            android:id="@+id/formation_ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:layout_height="wrap_content"
          android:layout_marginBottom="2dp"
            android:textColor="#008542" />

</RelativeLayout>

        <TextView
            android:id="@+id/playerPostion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="مهاجم"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="16sp" />


        <ImageButton
            android:id="@+id/remove_from_team_btn"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0.71"
            android:gravity="center"
            android:background="@drawable/ic_wrong" />

        <TextView
            android:id="@+id/ic_team"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0.71"
            android:gravity="center"
            android:text="&#xf0c0;"
            android:textColor="#008542"
            android:textSize="22sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>