<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebf8f1"
    android:gravity="center_horizontal"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:gravity="center"

        android:layoutDirection="ltr">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layoutDirection="ltr"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/edit_data_fragment_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_profile"
                        android:text="Edit Profile"
                        android:textColor="#a1a1a1"
                        android:textSize="13.33dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="10dp"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/team_btn_fragment_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_profile"
                        android:text="&#xf0c0;"
                        android:textColor="#a1a1a1"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="10dp"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_profile"
                        android:text="&#xf073;"
                        android:textColor="#a1a1a1"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="10dp"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/logout_activity_header_fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_profile"
                        android:text="&#xf08b;"
                        android:textColor="#a1a1a1"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/statisitics_icon_fragment_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="&#xf104;"
                        android:textColor="#bfbfbf"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:gravity="center"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/statisitics_fragment_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Statistics"
                        android:textColor="#bfbfbf"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layoutDirection="ltr"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layoutDirection="ltr"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/matches_win_icon_fragment_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="&#xf0a8;"
                                android:textColor="#bfbfbf"
                                android:textSize="13.33dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layoutDirection="ltr"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/matches_win_header_fragment_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Speed"
                                android:textColor="#bfbfbf"
                                android:textSize="18dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/player_speed_progressBar_fragment_profile"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"

                            android:indeterminate="false"
                            android:max="6"


                            android:progressDrawable="@drawable/progressbarstyleone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/player_speed_value_fragment_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0%"
                            android:textColor="#008542"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layoutDirection="ltr"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/matcches_tie_icon_fragment_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="&#xf0a8;"
                                android:textColor="#bfbfbf"
                                android:textSize="13.33dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:gravity="center"
                            android:layoutDirection="ltr"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/matches_tie_header_fragment_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Skills"
                                android:textColor="#bfbfbf"
                                android:textSize="18dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/player_skill_progressBar_fragment_profile"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:max="6"
                            android:progressDrawable="@drawable/progressbarstyleone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/player_skill_value_fragment_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0%"
                            android:textColor="#008542"
                            android:textSize="14dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layoutDirection="ltr"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/matches_lost_icon_fragment_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="&#xf0a8;"
                                android:textColor="#bfbfbf"
                                android:textSize="13.33dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layoutDirection="ltr"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/matches_lost_header_fragment_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Shooting"
                                android:textColor="#bfbfbf"
                                android:textSize="18dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/player_shooting_progressBar_fragment_profile"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:max="6"
                            android:progressDrawable="@drawable/progressbarstyleone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/player_shooting_value_fragment_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0%"
                            android:textColor="#008542"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/members_icon_fragment_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="&#xf104;"
                        android:textColor="#bfbfbf"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:gravity="center"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/members_icon_header_fragment_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Team Members"
                        android:textColor="#bfbfbf"
                        android:textSize="18dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="335dp"
                android:layout_height="94dp"
                android:layout_gravity="center"
                android:layout_marginTop="33dp"
                android:layoutDirection="ltr"
                android:orientation="horizontal">

                <android.support.v7.widget.RecyclerView

                    android:id="@+id/membersRecyclerView"

                    android:layout_width="335dp"

                    android:layout_height="wrap_content"
                    android:layoutDirection="ltr" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/get_player_style_btn"
                android:layoutDirection="ltr"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_submit_fragment_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/get_player_style_btn"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:text="Enroll To a Team"
                    android:textSize="24dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
