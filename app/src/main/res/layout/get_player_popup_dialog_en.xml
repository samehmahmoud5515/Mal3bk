<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/formationchildstyle"
    android:gravity="center"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <RadioGroup

        android:id="@+id/radioGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <RadioButton
            android:id="@+id/add_player_to_team_get_player_popup_dialog"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:paddingBottom="8dp"
            android:text="add to team"
            android:textColor="#2b2b2b"
            android:textSize="20dp" />


        <RadioButton
            android:id="@+id/borrow_get_player_popup_dialog"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"

            android:paddingBottom="8dp"
            android:text="borrow in match"
            android:textColor="#2b2b2b"
            android:textSize="20dp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/get_player_style_btn"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_execute_get_player_popup_dialog"
            android:layout_width="match_parent"


            android:layout_height="wrap_content"
            android:background="@drawable/get_player_style_btn"
            android:paddingBottom="8dp"
            android:text="execute"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>
