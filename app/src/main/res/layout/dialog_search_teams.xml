<?xml version="1.0" encoding="utf-8"?>

<!-- The main content view -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:background="#f1f9f5"

    >

    <LinearLayout
        android:id="@+id/regitration_ground_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f9f5"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.33dp"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:id="@+id/searchPopup"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center_vertical"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/city_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="&#xf073;"

                    android:layout_marginRight="24dp"
                    android:textColor="#20945a"
                    android:textSize="13.33dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="6.67dp"
                android:foregroundGravity="center_vertical"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/city_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="7dp"
                    android:text="المدينة"
                    android:textAlignment="center"
                    android:textColor="#20945a"
                    android:textSize="20dp" />
            </LinearLayout>




                    <Button
                        android:id="@+id/city_btn"
                        android:background="#FFF"
                        android:text="اختار"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:textSize="17sp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14dp"
                        android:textColor="#000"
                        />

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="15dp"

        android:background="@drawable/layout_registerground_button"
        android:orientation="horizontal">

        <Button
            android:id="@+id/search_teams_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search_trining_box_btn"
            android:paddingBottom="8dp"
            android:text="ابحث"
            android:textAllCaps="false"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>





